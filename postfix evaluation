#include <stdio.h>
#include <ctype.h>

#define MAX 100

int stack[MAX];
int top = -1;

void push(int x) {
    stack[++top] = x;
}

int pop() {
    return stack[top--];
}

int main() {
    char postfix[MAX];
    int i = 0;
    char ch;
    int val1, val2;

    printf("Enter postfix expression: ");
    scanf("%s", postfix);

    while ((ch = postfix[i++]) != '\0') {

        // If operand → push to stack
        if (isdigit(ch)) {
            push(ch - '0');   // convert char to int
        }
        // Operator → pop 2 values, apply, push result
        else {
            val2 = pop();
            val1 = pop();

            switch (ch) {
                case '+': push(val1 + val2); break;
                case '-': push(val1 - val2); break;
                case '*': push(val1 * val2); break;
                case '/': push(val1 / val2); break;
            }
        }
    }

    printf("Result = %d\n", pop());

    return 0;
}
